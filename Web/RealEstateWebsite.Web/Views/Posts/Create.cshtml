@model CreatePostFormModel

@{ 
    ViewBag.Title = $"Create Post for {Model.PropertyAddress}";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyPictureUrl"></label>
                <input readonly ="readonly" asp-for="PropertyPictureUrl" class="form-control">
                <span asp-validation-for="PropertyPictureUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyInterior"></label>
                <input readonly ="readonly" asp-for="PropertyInterior" class="form-control">
                <span asp-validation-for="PropertyInterior" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyAddress"></label>
                <input readonly ="readonly" asp-for="PropertyAddress" class="form-control">
                <span asp-validation-for="PropertyAddress" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyLivingArea"></label>
                <textarea readonly ="readonly" asp-for="PropertyLivingArea" rows="4" class="form-control"></textarea>
                <span asp-validation-for="PropertyLivingArea" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyRooms"></label>
                <input readonly ="readonly" asp-for="PropertyRooms" class="form-control">
                <span asp-validation-for="PropertyRooms" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyFloor"></label>
                <input readonly ="readonly" asp-for="PropertyFloor" class="form-control">
                <span asp-validation-for="PropertyFloor" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyTotalFloors"></label>
                <input readonly ="readonly" asp-for="PropertyTotalFloors" class="form-control">
                <span asp-validation-for="PropertyTotalFloors" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyYear"></label>
                <input readonly ="readonly" asp-for="PropertyYear" class="form-control">
                <span asp-validation-for="PropertyYear" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyPrice"></label>
                <input readonly ="readonly" asp-for="PropertyPrice" class="form-control">
                <span asp-validation-for="PropertyPrice" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyType"></label>
                <input readonly ="readonly" asp-for="PropertyType" class="form-control">
                <span asp-validation-for="PropertyType" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstateAgent"></label>
                <input readonly ="readonly" asp-for="EstateAgent" class="form-control">
                <span asp-validation-for="EstateAgent" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>
